<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Gameplay">

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="339dp"
        android:layout_height="249dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/point_goal"
        android:background="@drawable/background_rectangle">

        <TextView
            android:id="@+id/grid1_1"
            android:layout_width="86dp"
            android:layout_height="62dp"
            android:textAlignment="center"
            android:textSize="34sp"
            app:layout_column="1"
            app:layout_row="1"
            android:background="@drawable/cell_rectangle"/>

        <TextView
            android:id="@+id/grid1_2"
            android:layout_width="86dp"
            android:layout_height="62dp"
            android:textAlignment="center"
            android:textSize="34sp"
            app:layout_column="1"
            app:layout_row="2"
            android:background="@drawable/cell_rectangle_2"/>

        <TextView
            android:id="@+id/grid1_3"
            android:layout_width="86dp"
            android:layout_height="62dp"
            android:textAlignment="center"
            android:textSize="34sp"
            app:layout_column="1"
            app:layout_row="3"
            android:background="@drawable/cell_rectangle_4"/>

        <TextView
            android:id="@+id/grid0_1"
            android:layout_width="89dp"
            android:layout_height="62dp"
            android:textAlignment="center"
            android:textSize="34sp"
            app:layout_column="0"
            app:layout_row="1"
            android:background="@drawable/cell_rectangle_8"/>

        <TextView
            android:id="@+id/grid0_2"
            android:layout_width="89dp"
            android:layout_height="62dp"
            android:textAlignment="center"
            android:textSize="34sp"
            app:layout_column="0"
            app:layout_row="2"
            android:background="@drawable/cell_rectangle_16"/>

        <TextView
            android:id="@+id/grid0_3"
            android:layout_width="89dp"
            android:layout_height="62dp"
            android:textAlignment="center"
            android:textSize="34sp"
            app:layout_column="0"
            app:layout_row="3"
            android:background="@drawable/cell_rectangle_32"/>

        <TextView
            android:id="@+id/grid2_0"
            android:layout_width="84dp"
            android:layout_height="61dp"
            android:textAlignment="center"
            android:textSize="34sp"
            app:layout_column="2"
            app:layout_row="0"
            android:background="@drawable/cell_rectangle_64"/>

        <TextView
            android:id="@+id/grid2_1"
            android:layout_width="84dp"
            android:layout_height="62dp"
            android:textAlignment="center"
            android:textSize="34sp"
            app:layout_column="2"
            app:layout_row="1"
            android:background="@drawable/cell_rectangle_8"/>

        <TextView
            android:id="@+id/grid2_2"
            android:layout_width="84dp"
            android:layout_height="62dp"
            android:textAlignment="center"
            android:textSize="34sp"
            app:layout_column="2"
            app:layout_row="2"
            android:background="@drawable/cell_rectangle_128"/>

        <TextView
            android:id="@+id/grid2_3"
            android:layout_width="84dp"
            android:layout_height="62dp"
            android:textAlignment="center"
            android:textSize="34sp"
            app:layout_column="2"
            app:layout_row="3"
            android:background="@drawable/cell_rectangle_256"/>

        <TextView
            android:id="@+id/grid3_0"
            android:layout_width="83dp"
            android:layout_height="62dp"
            android:textAlignment="center"
            android:textSize="34sp"
            app:layout_column="3"
            app:layout_row="0"
            android:background="@drawable/cell_rectangle_2"/>/>

        <TextView
            android:id="@+id/grid3_1"
            android:layout_width="83dp"
            android:layout_height="62dp"
            android:textAlignment="center"
            android:textSize="34sp"
            app:layout_column="3"
            app:layout_row="1"
            android:background="@drawable/cell_rectangle_2048"/>/>

        <TextView
            android:id="@+id/grid3_2"
            android:layout_width="83dp"
            android:layout_height="62dp"
            android:textAlignment="center"
            android:textSize="34sp"
            app:layout_column="3"
            app:layout_row="2"
            android:background="@drawable/cell_rectangle_8"/>/>

        <TextView
            android:id="@+id/grid3_3"
            android:layout_width="83dp"
            android:layout_height="62dp"
            android:textAlignment="center"
            android:textSize="34sp"
            app:layout_column="3"
            app:layout_row="3"
            android:background="@drawable/cell_rectangle_16"/>/>

        <TextView
            android:id="@+id/grid1_0"
            android:layout_width="86dp"
            android:layout_height="62dp"
            android:textAlignment="center"
            android:textSize="34sp"
            app:layout_column="1"
            app:layout_row="0"
            android:background="@drawable/cell_rectangle_8"/>/>

        <TextView
            android:id="@+id/grid0_0"
            android:layout_width="89dp"
            android:layout_height="62dp"
            android:textAlignment="center"
            android:textSize="34sp"
            app:layout_column="0"
            app:layout_row="0" />
    </androidx.gridlayout.widget.GridLayout>
    <Button
        android:id="@+id/Main_Screen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/leave"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.049"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023" />

    <TextView
        android:id="@+id/point_goal"
        android:layout_width="205dp"
        android:layout_height="58dp"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.752"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023" />

    <Button
        android:id="@+id/move_left"
        android:layout_width="104dp"
        android:layout_height="97dp"
        android:text="@string/left"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="48sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/move_up"
        app:layout_constraintHorizontal_bias="0.684"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.93" />

    <Button
        android:id="@+id/move_right"
        android:layout_width="93dp"
        android:layout_height="100dp"
        android:text="@string/right"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="48sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.234"
        app:layout_constraintStart_toEndOf="@+id/move_up"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.935" />

    <Button
        android:id="@+id/move_up"
        android:layout_width="132dp"
        android:layout_height="78dp"
        android:text="@string/up"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="48sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout"
        app:layout_constraintVertical_bias="0.134" />

    <Button
        android:id="@+id/move_down"
        android:layout_width="136dp"
        android:layout_height="77dp"
        android:text="@string/down"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="38sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/move_up"
        app:layout_constraintVertical_bias="0.346" />

    <TextView
        android:id="@+id/userScore"
        android:layout_width="347dp"
        android:layout_height="72dp"
        android:layout_marginTop="12dp"
        android:text="@string/score"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/gridLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/point_goal"
        app:layout_constraintVertical_bias="0.258" />


</androidx.constraintlayout.widget.ConstraintLayout>